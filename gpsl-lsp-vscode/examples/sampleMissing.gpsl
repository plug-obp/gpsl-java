// Complex example combining everything
complexSystem *= let
    // State predicates
    idle = |{proc}@idle|,
    critical = |{proc}@critical|,
    
    // Flags
    flag = |{sys}:flag = true|,
    
    // Safety property
    safety = [] (critical -> (!next critical)),
    
    // Liveness property  
    liveness = [] (requesting -> (<> critical)),
    
    // Combined specification
    spec = safety and liveness
in
    spec
