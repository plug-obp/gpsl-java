{
  "comments": {
    "lineComment": "//",
    "blockComment": ["/*", "*/"]
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["|", "|"]
  ],
  "autoClosingPairs": [
    { "open": "(", "close": ")" },
    { "open": "[", "close": "]" },
    { "open": "{", "close": "}" },
    { "open": "|", "close": "|" },
    { "open": "\"", "close": "\"" }
  ],
  "surroundingPairs": [
    { "open": "(", "close": ")" },
    { "open": "[", "close": "]" },
    { "open": "{", "close": "}" },
    { "open": "|", "close": "|" },
    { "open": "\"", "close": "\"" }
  ],
  "wordPattern": "[a-zA-Z][a-zA-Z_0-9]*",
  "indentationRules": {
    "increaseIndentPattern": "^.*\\b(let|states|initial|accept)\\b.*$",
    "decreaseIndentPattern": "^\\s*\\b(in)\\b.*$"
  }
}
