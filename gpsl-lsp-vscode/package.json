{
  "name": "gpsl-lsp-vscode",
  "displayName": "GPSL Language Support",
  "description": "Language Server Protocol (LSP) client for GPSL (gpsl-java)",
  "publisher": "obp3",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": ["Programming Languages"],
  "activationEvents": [
    "onLanguage:gpsl"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "gpsl",
        "aliases": ["GPSL"],
        "extensions": [".gpsl"],
        "configuration": "./language-configuration.json"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p .",
    "watch": "tsc -w -p ."
  },
  "devDependencies": {
    "@types/node": "^20.12.12",
    "@types/vscode": "^1.90.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  }
}
